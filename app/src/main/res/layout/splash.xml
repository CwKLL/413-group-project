<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#483D8B"
    android:id="@+id/splash"
    >

    <TextView
        android:id="@+id/splashTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="bottom"
        android:text="TO-EAT LIST"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/splashSlogonTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="your foodie sidekick"
        android:textColor="#FFF"
        android:textSize="25dp"
        android:layout_marginBottom="15dp"/>

    <ImageView
        android:id="@+id/splash_monster"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:contentDescription="@string/app_name"
        android:gravity="center_vertical"
        android:src="@drawable/baseline_food_bank_white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textColor="#FFF"
        android:text="Click to start"
        android:textAppearance="?android:attr/textAppearanceMedium" />

</LinearLayout>
